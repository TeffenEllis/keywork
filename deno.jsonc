{
  "$schema": "https://cdn.deno.land/deno/versions/v1.23.3/raw/cli/schemas/config-file.v1.json",
  "compilerOptions": {

    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "experimentalDecorators": true,
    "checkJs": false,
    "allowJs": true,
    "types": [
      "./types/react-dom/server.browser/index.d.ts",
      "./types/env.d.ts",
      "./node_modules/@types/node/stream/web.d.ts"
    ]
  },
  "importMap": "./import_map.json",
  "lint": {
    "rules": {
      "exclude": [
        "ban-types",
        "no-explicit-any",
        "no-extra-semi",
        "no-empty-interface"
      ]
    },
    "files": {
      "exclude": [
        "node_modules",
        "dist",
        "dist-worker",
        "dist-node"
      ]
    }
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "lineWidth": 120,
      "proseWrap": "preserve"
    }
  }
}
