{
  "name": "@keywork/monorepo",
  "private": true,
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "author": "Teffen Ellis <teffen@sister.software>",
  "packageManager": "yarn@3.2.2",
  "type": "module",
  "engines": {
    "node": ">= 17.4",
    "deno": ">= 1.23"
  },
  "workspaces": [
    "./modules",
    "./site"
  ],
  "scripts": {
    "lint": "eslint ./modules",
    "build:check": "ts-node ./scripts/validate-runtime.ts",
    "build:modules": "yarn workspace keywork run build",
    "format:build": "prettier ./dist/**/*.{js,mjs,ts} --write --loglevel=warn",
    "format:docs": "prettier ./docs/**/*.{md,mdx} --write --loglevel=warn",
    "build": "yarn run build:modules && yarn run format:build",
    "site:dev": "yarn workspace @keywork/site run dev",
    "site:build": "yarn workspace @keywork/site run build",
    "site:deploy": "wrangler pages publish",
    "test": "yarn workspace keywork run test"
  },
  "exports": {
    "./common/*": "./common/*/index.js",
    "./node/*": "./node/*/index.js"
  },
  "dependencies": {
    "@sister.software/eslint-config": "^1.0.0",
    "@sister.software/prettier-config": "^1.0.0",
    "@sister.software/stylelint-config": "^1.0.0",
    "@types/command-exists": "^1.2.0",
    "@types/node": "^18.14.0",
    "@types/prettier": "^2.7.2",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "command-exists": "^1.2.9",
    "eslint": "^8.34.0",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "semver": "^7.3.7",
    "stylelint": "^14.16.1",
    "title-case": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "wrangler": "^2.10.0"
  },
  "prettier": "@sister.software/prettier-config",
  "stylelint": {
    "extends": [
      "@sister.software/stylelint-config"
    ]
  }
}
