{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "paths": {
      "@keywork/polyfills/*": ["packages/polyfills/lib/*/index.ts"],
      "keywork": ["packages/keywork/index.ts"],
      "keywork/*": ["packages/keywork/lib/*/index.ts"],
    },
    "types": [],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "checkJs": true,
    "allowJs": true
  },
  "exclude": [
    "**/dist/**/*"
  ]
}
