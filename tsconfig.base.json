
{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strict": true,
    // Disabled because of requirement for overloaded arguments in response parsers.
    // This may not be necessary in TS 4.8
    "strictFunctionTypes": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noStrictGenericChecks": false,
    "noUncheckedIndexedAccess": false,
    "declaration": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "remove",
    "baseUrl": ".",
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "lib": [
      "es2021",
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "composite": true
}
